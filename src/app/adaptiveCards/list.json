{
    "type": "AdaptiveCard",
    "fallbackText": "${summary}",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${avatarUrl}",
                            "height": "28px",
                            "style": "Person"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[${username}](${userLink}) ${subject}",
                            "wrap": true
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "stretch"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "List",
                            "isSubtle": true,
                            "size": "Small"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/list.png",
                            "width": "22px"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "auto"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Board",
                                    "wrap": true,
                                    "size": "Small",
                                    "weight": "Bolder"
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "List",
                                    "wrap": true,
                                    "size": "Small",
                                    "weight": "Bolder"
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "width": "stretch"
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "[${boardName}](${boardLink})",
                                    "wrap": true
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${listName}",
                                    "wrap": true
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "separator": true,
            "spacing": "Medium"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "14px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/feedback.png",
                            "height": "12px"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback](https://forms.gle/NavQjjv8SF2uyydc8)",
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}