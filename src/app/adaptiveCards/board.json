{
    "type": "AdaptiveCard",
    "fallbackText": "${summary}",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${avatarUrl}",
                            "height": "28px",
                            "style": "Person"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[${username}](${userLink}) ${subject}",
                            "wrap": true
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "stretch"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Board",
                            "size": "Small",
                            "isSubtle": true
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/board.png",
                            "height": "28px"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "width": "auto"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "14px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/feedback.png",
                            "height": "12px"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback](https://forms.gle/NavQjjv8SF2uyydc8)",
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}