{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/trello.png",
                                    "height": "24px"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${title}",
                                    "wrap": true
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "spacing": "Small"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "wrap": true,
                    "text": "Existing subscriptions:"
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "$data": "${subscriptions}",
                            "columns": [
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "**${boardName}**"
                                        }
                                    ],
                                    "width": "stretch",
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "ActionSet",
                                            "actions": [
                                                {
                                                    "type": "Action.Submit",
                                                    "data": {
                                                        "botId": "${botId}",
                                                        "messageType": "Bot",
                                                        "trelloWebhookId": "${id}",
                                                        "action": "edit"
                                                    },
                                                    "title": "Edit"
                                                }
                                            ]
                                        }
                                    ],
                                    "verticalContentAlignment": "Center"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "ActionSet",
                    "id": "submitActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Add new subscription",
                            "style": "positive",
                            "data": {
                                "botId": "${botId}",
                                "messageType": "Bot",
                                "conversationId": "${conversationId}",
                                "action": "addSubscription",
                                "conversationName": "${conversationName}"
                            }
                        }
                    ]
                }
            ],
            "separator": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "14px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/feedback.png",
                            "height": "12px"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback](https://github.com/ringcentral/trello-notification-app/issues)",
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "width": "stretch",
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ]
}