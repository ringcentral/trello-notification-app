{
  "type": "AdaptiveCard",
  "fallbackText": "${summary}",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "Image",
                      "url": "${avatarUrl}",
                      "height": "32px",
                      "style": "Person"
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "auto"
                },
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "[${username}](${userLink})",
                      "wrap": true
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "stretch"
                }
              ]
            }
          ],
          "width": "stretch"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "Card",
                      "wrap": true,
                      "isSubtle": true,
                      "horizontalAlignment": "Right"
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "stretch"
                },
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "Image",
                      "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/card.png",
                      "height": "32px"
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "auto"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${subject}",
          "wrap": true
        },
        {
          "type": "Container",
          "id": "commentArea",
          "items": [
            {
              "type": "TextBlock",
              "text": "Comment",
              "wrap": true,
              "size": "Small",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "${comment}",
              "wrap": true
            }
          ],
          "isVisible": false
        },
        {
          "type": "Container",
          "id": "descriptionArea",
          "items": [
            {
              "type": "TextBlock",
              "text": "Description",
              "wrap": true,
              "size": "Small",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "${description}",
              "wrap": true
            }
          ],
          "isVisible": false
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Board",
                  "wrap": true,
                  "size": "Small",
                  "weight": "Bolder"
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "id": "listLabel",
                  "type": "TextBlock",
                  "text": "List",
                  "wrap": true,
                  "size": "Small",
                  "weight": "Bolder"
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "[${boardName}](${boardLink})",
                  "wrap": true
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${listName}",
                  "wrap": true
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            }
          ]
        }
      ],
      "separator": true,
      "spacing": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "Join",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "TextBlock",
            "text": "Join into this card?"
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "Join",
            "data": {
              "action": "joinCard",
              "webhookId": "${webhookId}",
              "cardId": "${cardId}"
            }
          }
        ]
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "Comment",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Input.Text",
            "id": "comment",
            "placeholder": "Add a comment",
            "maxLength": 500,
            "isRequired": true,
            "isMultiline": true
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "Comment",
            "data": {
              "action": "commentCard",
              "webhookId": "${webhookId}",
              "cardId": "${cardId}"
            }
          }
        ]
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}
