{
  "type": "AdaptiveCard",
  "fallbackText": "${summary}",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "Image",
                      "url": "${avatarUrl}",
                      "height": "32px",
                      "style": "Person"
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "auto"
                },
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "[${username}](${userLink})",
                      "wrap": true
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "stretch"
                }
              ]
            }
          ],
          "width": "stretch"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "Card",
                      "wrap": true,
                      "isSubtle": true,
                      "horizontalAlignment": "Right"
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "stretch"
                },
                {
                  "type": "Column",
                  "items": [
                    {
                      "type": "Image",
                      "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/card.png",
                      "height": "32px"
                    }
                  ],
                  "verticalContentAlignment": "Center",
                  "width": "auto"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${subject}",
          "wrap": true
        },
        {
          "type": "Container",
          "id": "commentArea",
          "items": [
            {
              "type": "TextBlock",
              "text": "Comment",
              "wrap": true,
              "size": "Small",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "${comment}",
              "wrap": true
            }
          ],
          "isVisible": false
        },
        {
          "type": "Container",
          "id": "descriptionArea",
          "items": [
            {
              "type": "TextBlock",
              "text": "Description",
              "wrap": true,
              "size": "Small",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "${description}",
              "wrap": true
            }
          ],
          "isVisible": false
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Board",
                  "wrap": true,
                  "size": "Small",
                  "weight": "Bolder"
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "id": "listLabel",
                  "type": "TextBlock",
                  "text": "List",
                  "wrap": true,
                  "size": "Small",
                  "weight": "Bolder"
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "[${boardName}](${boardLink})",
                  "wrap": true
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${listName}",
                  "wrap": true
                }
              ],
              "verticalContentAlignment": "Center",
              "width": "stretch"
            }
          ]
        }
      ],
      "separator": true,
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ActionSet",
          "id": "actions",
          "actions": [
            {
              "type": "Action.ShowCard",
              "title": "Join",
              "card": {
                "type": "AdaptiveCard",
                "body": [
                  {
                    "type": "TextBlock",
                    "text": "Join into this card?"
                  }
                ],
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Join",
                    "data": {
                      "action": "joinCard",
                      "webhookId": "${webhookId}",
                      "messageType": "${messageType}",
                      "botId": "${botId}",
                      "cardId": "${cardId}"
                    }
                  }
                ]
              }
            },
            {
              "type": "Action.ShowCard",
              "title": "Comment",
              "card": {
                "type": "AdaptiveCard",
                "body": [
                  {
                    "type": "Input.Text",
                    "id": "comment",
                    "placeholder": "Add a comment",
                    "maxLength": 500,
                    "label": "Comment",
                    "errorMessage": "Please add a comment",
                    "isRequired": true,
                    "isMultiline": true
                  }
                ],
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Comment",
                    "data": {
                      "action": "commentCard",
                      "webhookId": "${webhookId}",
                      "messageType": "${messageType}",
                      "botId": "${botId}",
                      "cardId": "${cardId}"
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ActionSet",
          "id": "secondActions",
          "actions": [
            {
              "type": "Action.ShowCard",
              "title": "Label",
              "card": {
                "type": "AdaptiveCard",
                "body": [
                  {
                    "type": "ColumnSet",
                    "id": "selectedLabels",
                    "columns": [
                      {
                        "$data": "${selectedLabels}",
                        "type": "Column",
                        "width": "auto",
                        "items": [
                          {
                            "type": "ColumnSet",
                            "columns": [
                              {
                                "type": "Column",
                                "width": "16px",
                                "items": [
                                  {
                                    "type": "Image",
                                    "url": "${colorImage}",
                                    "height": "16px",
                                    "style": "Person"
                                  }
                                ],
                                "verticalContentAlignment": "Center",
                                "spacing": "None"
                              },
                              {
                                "type": "Column",
                                "width": "stretch",
                                "items": [
                                  {
                                    "type": "TextBlock",
                                    "text": "${name}"
                                  }
                                ],
                                "spacing": "Small",
                                "verticalContentAlignment": "Center"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "Container",
                    "id": "removeLabelForm",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "Remove label",
                        "size": "Small",
                        "weight": "Bolder"
                      },
                      {
                        "type": "ColumnSet",
                        "columns": [
                          {
                            "type": "Column",
                            "items": [
                              {
                                "type": "Input.ChoiceSet",
                                "id": "removeLabel",
                                "value": "${defaultRemoveLabelValue}",
                                "choices": [
                                  {
                                    "$data": "${selectedLabels}",
                                    "title": "${name}",
                                    "value": "${id}"
                                  }
                                ]
                              }
                            ]
                          },
                          {
                            "type": "Column",
                            "items": [
                              {
                                "type": "ActionSet",
                                "actions": [
                                  {
                                    "type": "Action.Submit",
                                    "title": "Remove",
                                    "data": {
                                      "action": "removeLabel",
                                      "webhookId": "${webhookId}",
                                      "messageType": "${messageType}",
                                      "botId": "${botId}",
                                      "cardId": "${cardId}"
                                    }
                                  }
                                ]
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "Container",
                    "id": "addLabelForm",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "Add label",
                        "size": "Small",
                        "weight": "Bolder"
                      },
                      {
                        "type": "ColumnSet",
                        "columns": [
                          {
                            "type": "Column",
                            "items": [
                              {
                                "type": "Input.ChoiceSet",
                                "id": "addLabel",
                                "value": "${defaultAddLabelValue}",
                                "choices": [
                                  {
                                    "$data": "${unselectedLabels}",
                                    "title": "${name}",
                                    "value": "${id}"
                                  }
                                ]
                              }
                            ]
                          },
                          {
                            "type": "Column",
                            "items": [
                              {
                                "type": "ActionSet",
                                "actions": [
                                  {
                                    "type": "Action.Submit",
                                    "title": "Add",
                                    "data": {
                                      "action": "addLabel",
                                      "webhookId": "${webhookId}",
                                      "messageType": "${messageType}",
                                      "botId": "${botId}",
                                      "cardId": "${cardId}"
                                    }
                                  }
                                ]
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            },
            {
              "type": "Action.ShowCard",
              "title": "Due Date",
              "card": {
                "type": "AdaptiveCard",
                "body": [
                  {
                    "type": "Input.Date",
                    "id": "dueDate",
                    "isRequired": true,
                    "label": "Due Date",
                    "errorMessage": "Please enter a date",
                    "placeholder": "Enter a date"
                  }
                ],
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Set Due Date",
                    "data": {
                      "action": "setCardDueDate",
                      "webhookId": "${webhookId}",
                      "messageType": "${messageType}",
                      "botId": "${botId}",
                      "cardId": "${cardId}"
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "operationLog",
      "style": "good",
      "items": [],
      "isVisible": false
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "14px",
          "items": [
            {
              "type": "Image",
              "url": "https://raw.githubusercontent.com/ringcentral/trello-notification-app/main/icons/feedback.png",
              "height": "12px"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "[Feedback](https://github.com/ringcentral/trello-notification-app/issues)",
              "wrap": true,
              "size": "Small"
            }
          ],
          "width": "stretch",
          "verticalContentAlignment": "Center"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}
